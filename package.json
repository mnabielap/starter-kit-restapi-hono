{
	"name": "starter-kit-restapi-hono",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"preview": "vite build && wrangler pages dev",
		"deploy": "npm run build && wrangler pages deploy",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"db:schema": "wrangler d1 execute starter-kit-restapi-hono-db --file=./src/db/schema.sql --local",
		"db:seed": "wrangler d1 execute starter-kit-restapi-hono-db --file=./src/db/seed.sql --local"
	},
	"dependencies": {
		"@hono/swagger-ui": "^0.5.2",
		"@hono/zod-openapi": "^1.1.0",
		"@hono/zod-validator": "^0.7.2",
		"bcrypt-ts": "^7.1.0",
		"hono": "^4.9.0"
	},
	"devDependencies": {
		"@hono/vite-build": "^1.2.0",
		"@hono/vite-dev-server": "^0.18.2",
		"vite": "^6.3.5",
		"wrangler": "^4.28.1"
	}
}
